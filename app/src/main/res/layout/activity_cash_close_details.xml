<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.agenda.smart.restaurant.views.CashCloseDetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolabar_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/applicationColor"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            android:contentInsetStartWithNavigation="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/resturant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="4dp"
                    android:layout_marginTop="12dp"
                    android:layout_toLeftOf="@+id/icon"
                    android:textColor="#fff"
                    android:textSize="18sp" />


                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/restaurant_icon" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <TableLayout
        android:layout_margin="3dp"
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolabar_holder"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight=".5"
                android:background="@drawable/round_corner_text_view"
                android:gravity="center"
                android:paddingEnd="4dp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight=".5"
                android:background="@drawable/round_corner_text_view"
                android:gravity="center_vertical"
                android:paddingEnd="4dp"
                android:text="الاسم"
                android:textSize="22dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight=".5"
                android:background="@drawable/round_corner_text_view"
                android:gravity="center"
                android:paddingEnd="4dp"
                android:textSize="22dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight=".5"
                android:background="@drawable/round_corner_text_view"
                android:gravity="center_vertical"
                android:paddingEnd="4dp"
                android:text="التاريخ"
                android:textSize="22dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:gravity="center"
                android:paddingEnd="4dp"
                android:textSize="22dp"
                android:layout_height="45dp"
                android:layout_weight=".5"
                android:background="@drawable/round_corner_text_view" />

            <TextView
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:paddingEnd="4dp"
                android:text="الوقت"
                android:textSize="22dp"
                android:layout_height="45dp"
                android:layout_weight=".5"
                android:background="@drawable/round_corner_text_view" />

        </TableRow>




        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total"
                android:layout_width="0dp"
                android:textSize="22dp"
                android:paddingEnd="4dp"
                android:gravity="center"
                android:layout_height="45dp"
                android:layout_weight=".5"
                android:background="@drawable/round_corner_text_view" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight=".5"
                android:background="@drawable/round_corner_text_view"
                android:gravity="center_vertical"
                android:paddingEnd="4dp"
                android:text="الاجمالي"
                android:textSize="22dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_cash"
                android:layout_width="0dp"
                android:textSize="22dp"
                android:paddingEnd="4dp"
                android:gravity="center"
                android:layout_height="45dp"
                android:layout_weight=".5"
                android:background="@drawable/round_corner_text_view" />

            <TextView
                android:layout_width="0dp"
                android:text="اجمالي الكاش"
                android:textSize="22dp"
                android:paddingEnd="4dp"
                android:gravity="center_vertical"
                android:layout_height="45dp"
                android:layout_weight=".5"
                android:background="@drawable/round_corner_text_view" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_net"
                android:layout_width="0dp"
                android:textSize="22dp"
                android:paddingEnd="4dp"
                android:gravity="center"
                android:layout_height="45dp"
                android:layout_weight=".5"
                android:background="@drawable/round_corner_text_view" />

            <TextView
                android:layout_width="0dp"
                android:text="اجمال الشبكة"
                android:textSize="22dp"
                android:paddingEnd="4dp"
                android:gravity="center_vertical"
                android:layout_height="45dp"
                android:layout_weight=".5"
                android:background="@drawable/round_corner_text_view" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_back"
                android:layout_width="0dp"
                android:textSize="22dp"
                android:paddingEnd="4dp"
                android:gravity="center"
                android:layout_height="45dp"
                android:layout_weight=".5"
                android:background="@drawable/round_corner_text_view" />

            <TextView
                android:layout_width="0dp"
                android:text="اجمالي المرتجعات"
                android:textSize="22dp"
                android:paddingEnd="4dp"
                android:gravity="center_vertical"
                android:layout_height="45dp"
                android:layout_weight=".5"
                android:background="@drawable/round_corner_text_view" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/cash_close"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_below="@+id/table"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_corner_button"
        android:text="اغلاق النقدية"
        android:textColor="#fff"
        android:textSize="19sp"
        android:textStyle="bold" />
</RelativeLayout>
